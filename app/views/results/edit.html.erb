<% if policy(@result).update? %>
  <%= simple_form_for @result do |f| %>
    <%= f.association :race_driver %>
    <%= f.input :position %>
    <%= f.input :dnf %>
    <%= f.input :dsq %>
    <%= f.button :submit %>
  <% end %>

  <br><br><br>

  <%= link_to "Delete Result",
      result_path(@result),
      method: :delete,
      data: {confirm: "Are you sure?"} %>
<% end %>
