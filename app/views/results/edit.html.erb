<%= simple_form_for @result do |f| %>
  <%= f.association :race %>
  <%= f.association :driver, label_method: :surname %>
  <%= f.association :constructor %>
  <%= f.input :position %>
  <%= f.input :dnf %>
  <%= f.input :dsq %>
  <%= f.button :submit %>
<% end %>

<br><br><br>

<%= link_to "Delete Result",
    result_path(@result),
    method: :delete,
    data: {confirm: "Are you sure?"} %>
