<%= link_to "Add a driver", new_driver_path %>

<ul>
  <% @drivers.each do |driver| %>
    <li>
      <%= driver.forename %> <%= driver.surname %> - <%= driver.number %> -
      <%= link_to "Delete",
      driver,
      method: :delete,
      data: {confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>
