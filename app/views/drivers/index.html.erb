<% if policy(@driver).new? %>
  <%= link_to "Add a driver", new_driver_path %>
<% end %>

<ul>
  <% @drivers.each do |driver| %>
    <li>
      <%= driver.forename %> <%= driver.surname %> - <%= driver.number %>
      <% if policy(driver).destroy? %>
      -
        <%= link_to "Delete",
        driver,
        method: :delete,
        data: {confirm: "Are you sure?"} %>
      <% end %>
    </li>
  <% end %>
</ul>
